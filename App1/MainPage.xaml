<Page
    x:Class="MaxtrixCalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MaxtrixCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}" Grid.Row="0" x:Name="rootGrid"></Grid>


        <Grid Grid.Row="1">
            <TextBox x:Name="output" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="100" Width="1024" Margin="10,5,10,5"></TextBox>
            <Button Content="Reset" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,30,0" x:Name="resetButton"/>
        </Grid>
    </Grid>
</Page>
